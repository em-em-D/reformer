<h1>Editing User</h1>

<%= form_for @user do |f| %>
  <%= render 'shared/error_messages' %>
  <%= f.label :username, 'Username: ' %>
  <%= f.text_field :username, placeholder: 'enter user name here' %><br>

  <%= f.label :email, 'Email: ' %>
  <%= f.email_field :email, placeholder: 'example@example.com' %><br>

  <%= f.label :password, 'Password: ' %>
  <%= f.password_field :password %>

  <%= f.submit 'Change Info' %>
<% end %>